<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="005-add-group-id-to-reservations" author="sale">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="reservations" columnName="group_id"/>
            </not>
        </preConditions>

        <addColumn tableName="reservations">
            <!-- UUID string -->
            <column name="group_id" type="VARCHAR(36)"/>
        </addColumn>

        <createIndex tableName="reservations" indexName="idx_res_group_id">
            <column name="group_id"/>
        </createIndex>

        <!-- Opcionalno: ubrzava admin pending (status filter) -->
        <createIndex tableName="reservations" indexName="idx_res_status_group">
            <column name="status"/>
            <column name="group_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>